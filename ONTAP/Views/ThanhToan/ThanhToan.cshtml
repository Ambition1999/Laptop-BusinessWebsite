                                    <input type="text" class="form-control" name="txtTen" value="@Model.TenKH" />
                                </div>
                            </div>
                            @*<div class="form-group">
                                <div class="col-md-12"><strong>Giới tính:</strong></div>
                                <div class="col-md-12">
                                    <select style="height:30px" name="GioiTinh" class="form-control">
