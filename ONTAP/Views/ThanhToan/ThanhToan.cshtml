                </div>
                
                </form>
            </div>
            <div class="row cart-footer">
        
            </div>
    
     <script language="javascript">
         
        function checkNhap() {
            var sdt = document.getElementById('txtSDT').value;
            if (sdt == "" || sdt == null) {
                alert("Ban chua nhap so dien thoai !!");
                return false;
            }
            if (phonenumber(sdt) == false) {
                alert("Sai dinh dang so dien thoai !!");
                return false;
            }
            var dc = document.getElementById('DiaChiNhan').value;
            if (dc == "" || dc == null) {
                alert("Ban chua nhap dia chi");
                return false;
            }

            return true;
        }
        function phonenumber(sdt) {
            var phoneVN_regex = /((09|03|07|08|05)+([0-9]{8})\b)/g;
            //Viettel 09, 03; Mobi 09, 07; Vina 09, 08; VietnamMobile GMobli 09, 05
            if (phoneVN_regex.test(sdt) == false)
                return false;
            return true;
        }
     </script>
    
