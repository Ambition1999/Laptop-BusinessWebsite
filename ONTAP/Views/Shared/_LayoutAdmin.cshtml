<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/admin.js"></script>
    <link href="~/Content/font/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/css2.css" rel="stylesheet" />
    <link href="~/Content/css1.css" rel="stylesheet" />


     <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/vendors/css/vendor.bundle.base.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>

    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/css/style1.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Content/images/favicon.png" />
   

    

</head>
@using ONTAP.Models
<body>
    <div class="row">
        <div class="w-100 tren form-inline">
            <img class="anh" src="~/Content/hinh/logo-trans-600.png"/>            
            <div class="form-inline" style="margin-left:750px">
                <i class="fas fa-user fa-1x"></i>
                <i class="fas fa-envelope fa-1x" style="margin-left:20px"></i>
                <i class="fas fa-bell fa-1x" style="margin-left:20px"></i>
                <a href="@Url.Action("xulydangxuat","khachhang")">Log out</a>
                <i class="fas fa-user-circle fa-2x" style="margin-left:20px;margin-right:10px"></i>
                @if(Session["dangnhap"]!=null)
                {
                    tblNhanVien tk = Session["dangnhap"] as tblNhanVien;
                    <label>@tk.TenNV</label>
                }
                else
                {
                    <label>Admin</label>      
                }
            </div>
        </div>
        <div class="col-md-3">
		    <div class="menu">
                <ul class="nav flex-column" style="background-color:#232020">
                    <li class="nav-item">
                        <p>
@*                            <i class="fa fa-spinner fa-spin fa-3x "></i>*@
                            <i class="fa fa-cog fa-spin fa-3x fa-fw icon"></i>
@*                            <i class="fa fa-spinner fa-pulse fa-3x fa-fw "></i>*@
                        </p>
                    <a href="@Url.Action("Index", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fas fa-archway"></i> Trang Chủ</a>
                    </li>
                    <li style="height:34px;color:#928f8f">Sản Phẩm</li>
                    <li class="nav-item">
                        <a href="@Url.Action("NhomThietBi", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fas fa-align-justify"></i> Danh Mục Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SanPham", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fab fa-codepen"></i> Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("donHang", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fas fa-archive"></i> Đơn Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("NhapHang", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fab fa-accusoft"></i> Nhập Hàng</a>
                    </li>
                    <li style="height:34px;color:#928f8f">Thành Viên & Admin</li>
                    <li class="nav-item">
                        <a href="@Url.Action("KH", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fas fa-users"></i> Thành Viên</a>
                    </li>
                    <li style="height:34px;color:#928f8f">Thống Kê</li>
                    <li class="nav-item">
                        <a href="@Url.Action("thongke", "Admin")" style="height:50px;color:#ffffff" class="nav-link"><i class="fas fa-book-reader"></i> Thống Kê</a>
                    </li>
                </ul>
		    </div>
        </div>
    <div class="col-md-9">
       @if (TempData["AlertMessage"] != null)
       { 
        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
            @TempData["AlertMessage"]
        </div>
       }
        
        @RenderBody()
    </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
     <script>
         $(document).ready(function () {
             $('#AlertBox').removeClass('hide');
             $('#AlertBox').delay(1000).slideUp(500);
         })
        </script>
    @RenderSection("scripts", required: false)


        <script src="~/Content/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Content/vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Content/js/off-canvas.js"></script>
    <script src="~/Content/js/hoverable-collapse.js"></script>
    <script src="~/Content/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
   <script src="~/Content/js/dashboard.js"></script>
    <script src="~/Content/js/todolist.js"></script>
</body>
</html>
