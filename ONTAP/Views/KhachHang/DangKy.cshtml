@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Đăng ký</h3>
<div class="nav w-100 h-100 mt-3 mb-3 justify-content-center">
<div class="col-md-6 col-sm-12 border border-primary">
  <div class="shadow p-4 mb-4 bg-white">
  <div class="login-form container">
               <form class="form justify-content-center" action="@Url.Action("XulyDangKy","KhachHang")" method="post">
                  <div class="form-group form-line">
                     <label>Tên đăng nhập</label>
                     <input type="text" class="form-control" id="txtTenTK" name="txtTenTK" placeholder="User Name">
                  </div>
                  <div class="form-group">
                     <label>Mật khẩu</label>
                     <input type="password" class="form-control" id="txtMatKhau" name="txtMatKhau" placeholder="Password">
                  </div>
                  <div class="form-group">
                     <label>Nhập lại mật khẩu</label>
                     <input type="password" class="form-control" id="re_txtMatKhau" name="re_txtMatKhau" placeholder="Rewrite Password">
                  </div>
                  <div class="form-group">
                     <label>Họ và Tên</label>
                     <input type="text" class="form-control" id="txtHoTen" name="txtHoTen" placeholder="Your Name">
                  </div>
                  <div class="form-group">
                     <label>Ngày sinh</label>
                     <input type="date" class="form-control" id="txtNgaySinh" name="txtNgaySinh">
                  </div>
                  <div class="form-group">
                     <label>Giới tính  </label>
                     <div class="form-check">
                         <input type="radio" class="form-check-input" name="txtGioiTinh" value="Nam" id="gridcheck" checked> 
                         <label class="form-check-label" for="gridcheck"> Nam </label>
                     </div>
                     <div class="form-check">
                         <input type="radio" class="form-check-input" name="txtGioiTinh" value="Nữ" id="gridcheck">  
                         <label class="form-check-label" for="gridcheck"> Nữ </label>
                     </div>   
                  </div>
                  <div class="form-group">
                     <label for="txtDienThoai">Số điện thoại</label>
                     <input type="tel" class="form-control" id="txtDienThoai" name="txtDienThoai" placeholder="Phone number">
                  </div>
                  <div class="form-group">
                     <label>Địa chỉ</label>
                     <input type="text" class="form-control" id="txtDiaChi" name="txtDiaChi" placeholder="Address">
                  </div>
                   <div class="form-group">
                     <label>Email</label>
                     <input type="email" class="form-control" id="txtEmail" name="txtEmail" placeholder="Address">
                  </div>
                  <button type="submit" onclick="return Validate()" class="btn btn-black">Xác nhận</button>
                  <button type="submit" formaction="@Url.Action("DangNhap", "KhachHang")" class="btn btn-secondary">Quay lại đăng nhập</button>
               </form>
  </div>
  </div>
</div>
</div>


@if (TempData["message"] != null)
{
   @Html.Raw(TempData["message"]) 
}